# Infrastructure Environment Configuration

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sprintlens
POSTGRES_USER=sprintlens
POSTGRES_PASSWORD=sprintlens_password
DATABASE_URL=postgresql://sprintlens:sprintlens_password@localhost:5432/sprintlens

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=sprintlens_analytics
CLICKHOUSE_USER=sprintlens_analytics
CLICKHOUSE_PASSWORD=analytics_password
CLICKHOUSE_URL=http://localhost:8123

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=sprintlens
MINIO_SECRET_KEY=sprintlens_minio_password
MINIO_BUCKET_NAME=sprintlens-storage
MINIO_USE_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=sprintlens_redis_password
REDIS_URL=redis://:sprintlens_redis_password@localhost:6379

# Grafana Configuration
GRAFANA_URL=http://localhost:3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=sprintlens_grafana_password

# Vector Embeddings Configuration
OPENAI_API_KEY=your_openai_api_key_here
