{
  "name": "sprintagentlens-backend",
  "version": "1.0.0",
  "description": "SprintAgentLens Backend - Enterprise AI observability and evaluation platform",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:e2e": "jest --config=jest.e2e.config.js",
    "test:unit": "jest --config=jest.unit.config.js",
    "test:performance": "jest --config=jest.performance.config.js",
    "test:migration": "jest tests/migration --testTimeout=60000",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "docker:build": "docker build -t sprintagentlens/backend:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env sprintagentlens/backend:latest",
    "docker:compose:up": "docker-compose -f docker-compose.production.yml up -d",
    "docker:compose:down": "docker-compose -f docker-compose.production.yml down",
    "docker:compose:logs": "docker-compose -f docker-compose.production.yml logs -f",
    "deploy": "scripts/deploy.sh deploy",
    "deploy:test": "scripts/deploy.sh test",
    "deploy:backup": "scripts/deploy.sh backup",
    "deploy:rollback": "scripts/deploy.sh rollback",
    "setup:production": "scripts/setup-production.sh",
    "health:check": "curl -f http://localhost:3000/health/ping || exit 1",
    "logs:app": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "logs:audit": "tail -f logs/audit.log",
    "clean": "rm -rf dist coverage node_modules/.cache",
    "clean:all": "rm -rf dist coverage node_modules package-lock.json",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "validate": "npm run typecheck && npm run lint && npm run test:unit",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "ai",
    "observability",
    "evaluation",
    "llm",
    "authentication",
    "enterprise",
    "typescript",
    "fastify"
  ],
  "author": "SprintAgentLens Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.474.0",
    "@clickhouse/client": "^0.2.5",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.1",
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "bullmq": "^5.58.4",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "ioredis": "^5.7.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "tsx src/scripts/seed.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/scripts/**",
      "!src/types/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  },
  "tsup": {
    "entry": [
      "src/server.ts"
    ],
    "outDir": "dist",
    "target": "node18",
    "format": [
      "cjs"
    ],
    "clean": true,
    "sourcemap": true,
    "minify": false,
    "splitting": false,
    "treeshake": true,
    "env": {
      "NODE_ENV": "production"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "ignorePatterns": [
      "dist/",
      "node_modules/",
      "coverage/"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  }
}
