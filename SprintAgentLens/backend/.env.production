# Production Environment Configuration
# SprintAgentLens Backend - Production Settings

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=mysql://username:password@localhost:3306/sprintagentlens_production
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=sprintagentlens_production
MYSQL_USER=sprintagentlens_prod
MYSQL_PASSWORD=

# ClickHouse Configuration (if used)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=sprintagentlens_production
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
JWT_SECRET=
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=
ENCRYPTION_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://app.sprintagentlens.com
CORS_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_DIRECTORY=/app/uploads
TEMP_DIRECTORY=/app/temp

# External Services
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2
AWS_S3_BUCKET=sprintagentlens-production

# Email Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@sprintagentlens.com

# Monitoring & Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Checks
HEALTH_CHECK_TIMEOUT=5000
DATABASE_HEALTH_CHECK=true
REDIS_HEALTH_CHECK=true

# Performance Configuration
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024
REQUEST_TIMEOUT=30000
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=30000

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
FRAME_OPTIONS=DENY

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_RETENTION_DAYS=90

# Background Jobs
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_TYPE=exponential

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_QUERY_CACHE=true

# API Configuration
API_VERSION=v1
API_PREFIX=/api
ENABLE_API_DOCS=false
MAX_REQUEST_SIZE=10mb

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Cluster Configuration
CLUSTER_ENABLED=false
CLUSTER_WORKERS=0

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_TELEMETRY=true
FEATURE_EXPERIMENTAL=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30